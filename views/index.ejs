<%- include("./partials/header") -%>

    <div class="container">
        <p class="text-center mt-4" id="top-heading">EVERYTHING IS
            PERSONAL. INCLUDING THIS BLOG.</p>
        <h1 class="text-center" id="name">Train Of Thoughts</h1>
    </div>

    <%- include("./partials/navbar") -%>

        <div class="container mt-5 ">
            <!-- <h3>All Blogs</h3> -->
            <% for(var i=0;i < data.length;i++) { %>
                <div class="card mb-3 p-5">
                    <div class="card-body mt-3">
                        <!-- <p class="text-muted">
                            <%= data[i].postedAt%>
                        </p> -->
                        <p class="text-muted" style="font-size: 0.8rem;">
                            <%= data[i].date %>
                        </p>
                        <h1 class="card-title text-uppercase">
                            <%= data[i].title %>&nbsp;

                        </h1>
                        <img class="card-img-top" src="images/a.png" alt="">

                        <p class="card-text">
                            <%= data[i].content.slice(0,99) %>...<a href="/blog/<%= data[i]._id %>">Read more</a>
                        </p>
                        <a href="/blog/<%= data[i]._id %>" class="btn btn-primary">Read more</a>
                        <a href="/edit/<%= data[i]._id %>" class="btn btn-success">Edit</a>
                        <a href="/delete/<%= data[i]._id %>" class="btn btn-danger">Delete</a>
                    </div>
                </div>
                <% } %>
        </div>

        <%- include("./partials/footer") -%>